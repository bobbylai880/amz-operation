{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["context", "summary", "dimensions"],
  "properties": {
    "context": {
      "type": "object",
      "required": [
        "scene_tag",
        "base_scene",
        "morphology",
        "marketplace_id",
        "week",
        "sunday",
        "my_parent_asin",
        "my_asin",
        "opp_type",
        "asin_priority"
      ],
      "properties": {
        "scene_tag": {"type": "string"},
        "base_scene": {"type": "string"},
        "morphology": {"type": "string"},
        "marketplace_id": {"type": ["string", "number"]},
        "week": {"type": "string"},
        "sunday": {"type": "string"},
        "my_parent_asin": {"type": "string"},
        "my_asin": {"type": "string"},
        "opp_type": {"type": "string"},
        "asin_priority": {"type": ["number", "integer"]}
      }
    },
    "summary": {
      "type": "string",
      "minLength": 1
    },
    "dimensions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "lag_type",
          "status",
          "severity",
          "source_opp_type"
        ],
        "properties": {
          "lag_type": {"type": "string"},
          "status": {
            "type": "string",
            "enum": ["lead", "parity", "lag", "uncertain"]
          },
          "severity": {
            "type": "string",
            "enum": ["low", "mid", "high", "uncertain"]
          },
          "source_opp_type": {"type": "string"},
          "source_confidence": {"type": ["number", "null"]},
          "notes": {"type": ["string", "null"]}
        }
      }
    }
  }
}
