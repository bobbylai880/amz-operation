{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Competition Stage-2 Aggregate Output",
  "type": "object",
  "required": ["context", "lag_type", "root_causes", "recommended_actions"],
  "properties": {
    "context": { "type": "object" },
    "lag_type": { "type": "string", "enum": ["mixed"] },
    "root_causes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["root_cause_code", "summary", "evidence_refs", "priority"],
        "properties": {
          "root_cause_code": { "type": "string" },
          "summary": { "type": "string" },
          "lag_dimension": {
            "type": "string",
            "enum": ["price", "rank", "content", "social", "badge", "traffic_mix", "keyword", "confidence"]
          },
          "related_opp_asins": {
            "type": "array",
            "items": { "type": "string" }
          },
          "evidence_refs": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["lag_type", "opp_type", "metric", "value"],
              "properties": {
                "lag_type": { "type": "string" },
                "opp_type": { "type": "string", "enum": ["leader", "median", "any"] },
                "metric": { "type": "string" },
                "value": {}
              }
            }
          },
          "priority": { "type": "integer", "minimum": 1 }
        }
      }
    },
    "recommended_actions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["action_code", "rationale", "priority"],
        "properties": {
          "action_code": { "type": "string" },
          "rationale": { "type": "string" },
          "priority": { "type": "integer", "minimum": 1 },
          "target": { "type": "string" },
          "expected_impact": { "type": "string" }
        }
      }
    },
    "top_opp_asins_csv": { "type": "string" }
  }
}
