{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "context",
    "lag_type",
    "why_chain",
    "root_causes",
    "recommended_actions"
  ],
  "properties": {
    "context": {
      "type": "object",
      "required": [
        "scene_tag",
        "base_scene",
        "morphology",
        "marketplace_id",
        "week",
        "sunday",
        "my_parent_asin",
        "my_asin",
        "opp_type"
      ],
      "properties": {
        "scene_tag": {"type": "string"},
        "base_scene": {"type": "string"},
        "morphology": {"type": "string"},
        "marketplace_id": {"type": ["string", "number"]},
        "week": {"type": "string"},
        "sunday": {"type": "string"},
        "my_parent_asin": {"type": "string"},
        "my_asin": {"type": "string"},
        "opp_type": {"type": "string"}
      }
    },
    "lag_type": {"type": "string"},
    "why_chain": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["why", "answer", "evidence_refs"],
        "properties": {
          "why": {"type": "string"},
          "answer": {"type": "string"},
          "evidence_refs": {
            "type": "array",
            "minItems": 1,
            "items": {"type": "string"}
          }
        }
      }
    },
    "root_causes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "description",
          "evidence_refs",
          "is_root",
          "is_partial",
          "root_cause_code"
        ],
        "properties": {
          "description": {"type": "string"},
          "evidence_refs": {
            "type": "array",
            "minItems": 1,
            "items": {"type": "string"}
          },
          "is_root": {"type": "boolean"},
          "is_partial": {"type": "boolean"},
          "root_cause_code": {"type": "string"},
          "owner": {"type": ["string", "null"]}
        }
      }
    },
    "recommended_actions": {
      "type": "array",
      "minItems": 1,
      "maxItems": 5,
      "items": {
        "type": "object",
        "required": [
          "action",
          "owner",
          "expected_impact",
          "validation_metric",
          "action_code",
          "evidence_refs"
        ],
        "properties": {
          "action": {"type": "string"},
          "owner": {"type": "string"},
          "expected_impact": {"type": "string"},
          "validation_metric": {"type": "string"},
          "action_code": {"type": "string"},
          "evidence_refs": {
            "type": "array",
            "minItems": 1,
            "items": {"type": "string"}
          }
        }
      }
    }
  }
}
