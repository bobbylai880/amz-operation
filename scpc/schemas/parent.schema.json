{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "status",
    "primary_weak_step",
    "diagnosis",
    "actions",
    "confidence_overall",
    "insufficient_data"
  ],
  "properties": {
    "status": {"type": "string"},
    "primary_weak_step": {"type": "string"},
    "secondary_weak_step": {"type": ["string", "null"]},
    "diagnosis": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["step", "root_causes", "evidence", "confidence_step"],
        "properties": {
          "step": {"type": "string"},
          "root_causes": {"type": "array", "items": {"type": "string"}},
          "evidence": {"type": "array", "items": {"type": "string"}},
          "confidence_step": {"type": "number"}
        }
      }
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "what", "expected_impact", "evidence"],
        "properties": {
          "type": {"type": "string"},
          "what": {"type": "string"},
          "expected_impact": {"type": "string"},
          "evidence": {"type": "array", "items": {"type": "string"}}
        }
      }
    },
    "confidence_overall": {"type": "number", "minimum": 0, "maximum": 1},
    "insufficient_data": {"type": "boolean"},
    "notes": {"type": ["string", "null"]}
  }
}
