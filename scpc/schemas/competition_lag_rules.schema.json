{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "competition_lag_rules",
  "type": "object",
  "required": ["version", "profiles"],
  "properties": {
    "version": { "type": "integer", "minimum": 1 },
    "defaults": {
      "type": "object",
      "properties": {
        "comparator": { "type": "string" },
        "opp_type": { "type": "string", "enum": ["leader", "median", "any"] },
        "weight": { "type": "number", "minimum": 0 }
      }
    },
    "profiles": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "is_active", "rules"],
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "is_active": { "type": "boolean" },
          "rules": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["lag_type", "metric", "threshold"],
              "properties": {
                "lag_type": {
                  "type": "string",
                  "enum": [
                    "price",
                    "rank",
                    "content",
                    "social",
                    "badge",
                    "confidence",
                    "traffic_mix",
                    "keyword"
                  ]
                },
                "metric": { "type": "string" },
                "opp_type": { "type": "string", "enum": ["leader", "median", "any"] },
                "cmp": { "type": "string" },
                "threshold": { "type": "number" },
                "weight": { "type": "number", "minimum": 0 },
                "comment": { "type": "string" },
                "is_active": { "type": "boolean" }
              }
            }
          }
        }
      }
    },
    "overrides": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "is_active", "when", "rules"],
        "properties": {
          "name": { "type": "string" },
          "is_active": { "type": "boolean" },
          "when": {
            "type": "object",
            "properties": {
              "marketplace_id": { "type": "string" },
              "base_scene": { "type": "string" },
              "scene_tag": { "type": "string" },
              "morphology": { "type": "string" },
              "opp_type": { "type": "string", "enum": ["leader", "median", "any"] }
            },
            "additionalProperties": false
          },
          "rules": { "$ref": "#/properties/profiles/items/properties/rules" }
        }
      }
    }
  }
}
